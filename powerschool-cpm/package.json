{
  "name": "powerschool-cpm",
  "displayName": "PowerSchool CPM",
  "description": "Manage custom pages in PowerSchool",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [

      {
        "command": "powerschool-cpm.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "powerschool-cpm.downloadFile",
        "title": "Download File"
      },
      {
        "command": "powerschool-cpm.publishFile",
        "title": "Publish to PowerSchool",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "powerschool-cpm.publishCurrentFile",
        "title": "PowerSchool CPM: Publish Current File"
      },


      {
        "command": "powerschool-cpm.createNewFile",
        "title": "PowerSchool CPM: Create New File",
        "icon": "$(new-file)"
      },
      {
        "command": "powerschool-cpm.publishNewFile",
        "title": "PowerSchool CPM: Publish New File to PowerSchool",
        "icon": "$(cloud-upload)"
      },

      {
        "command": "powerschool-cpm.insertSnippet",
        "title": "PowerSchool CPM: Insert Code Snippet",
        "icon": "$(code)"
      },
      {
        "command": "powerschool-cpm.insertSnippet.box_round",
        "title": "Box Round Container"
      },
      {
        "command": "powerschool-cpm.insertSnippet.calendar",
        "title": "Date Picker Widget"
      },
      {
        "command": "powerschool-cpm.insertSnippet.dialog",
        "title": "Dialog Link"
      },
      {
        "command": "powerschool-cpm.insertSnippet.dynamic_tabs",
        "title": "Dynamic Tabs"
      },
      {
        "command": "powerschool-cpm.insertSnippet.jquery_function",
        "title": "jQuery Function Block"
      },
      {
        "command": "powerschool-cpm.insertSnippet.form",
        "title": "PowerSchool Form"
      },
      {
        "command": "powerschool-cpm.insertSnippet.table",
        "title": "Data Table"
      },
      {
        "command": "powerschool-cpm.insertSnippet.tlist_sql",
        "title": "TList SQL Block"
      },
      {
        "command": "powerschool-cpm.insertSnippet.collapsible_box",
        "title": "Collapsible Box"
      },
      {
        "command": "powerschool-cpm.insertSnippet.if_block",
        "title": "If/Else Block"
      },
      {
        "command": "powerschool-cpm.insertSnippet.student_info",
        "title": "Student Info Tags"
      },
      {
        "command": "powerschool-cpm.insertSnippet.breadcrumb",
        "title": "Breadcrumb Navigation"
      },
      {
        "command": "powerschool-cpm.createTemplate.admin",
        "title": "Admin Page"
      },
      {
        "command": "powerschool-cpm.createTemplate.adminStudentPage",
        "title": "Admin Student Page"
      },
      {
        "command": "powerschool-cpm.createTemplate.teacher",
        "title": "Teacher Page"
      },
      {
        "command": "powerschool-cpm.createTemplate.teacherBackpack",
        "title": "Teacher Backpack Page"
      },
      {
        "command": "powerschool-cpm.createTemplate.parentPortal",
        "title": "Parent Portal Page"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "powerschool-cpm-explorer",
          "name": "PowerSchool Files",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "submenus": [
      {
        "id": "powerschool-cpm.snippets",
        "label": "Insert PowerSchool Snippet"
      },
      {
        "id": "powerschool-cpm.templates",
        "label": "Create New PowerSchool File"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "powerschool-cpm.refresh",
          "when": "view == powerschool-cpm-explorer",
          "group": "navigation"
        },
        {
          "command": "powerschool-cpm.createNewFile",
          "when": "view == powerschool-cpm-explorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "powerschool-cpm.publishFile",
          "when": "view == powerschool-cpm-explorer && viewItem == file",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "powerschool-cpm.publishCurrentFile",
          "when": "editorIsOpen"
        },
        {
          "command": "powerschool-cpm.createNewFile"
        },
        {
          "command": "powerschool-cpm.publishNewFile",
          "when": "editorIsOpen"
        },

        {
          "command": "powerschool-cpm.insertSnippet"
        }
      ],
      "editor/context": [
        {
          "command": "powerschool-cpm.publishCurrentFile",
          "when": "resourceExtname =~ /\\.(html|htm|js|css|txt)$/",
          "group": "powerschool"
        },
        {
          "command": "powerschool-cpm.publishNewFile",
          "when": "resourceExtname =~ /\\.(html|htm|js|css|txt)$/",
          "group": "powerschool"
        },
        {
          "submenu": "powerschool-cpm.snippets",
          "when": "resourceExtname =~ /\\.(html|htm|js|css|txt)$/",
          "group": "powerschool@1"
        },
        {
          "submenu": "powerschool-cpm.templates",
          "when": "resourceExtname =~ /\\.(html|htm|js|css|txt)$/",
          "group": "powerschool@2"
        }
      ],
      "powerschool-cpm.snippets": [
        {
          "command": "powerschool-cpm.insertSnippet.box_round",
          "group": "layout"
        },
        {
          "command": "powerschool-cpm.insertSnippet.table",
          "group": "layout"
        },
        {
          "command": "powerschool-cpm.insertSnippet.calendar",
          "group": "forms"
        },
        {
          "command": "powerschool-cpm.insertSnippet.form",
          "group": "forms"
        },
        {
          "command": "powerschool-cpm.insertSnippet.dialog",
          "group": "ui"
        },
        {
          "command": "powerschool-cpm.insertSnippet.dynamic_tabs",
          "group": "ui"
        },
        {
          "command": "powerschool-cpm.insertSnippet.collapsible_box",
          "group": "ui"
        },
        {
          "command": "powerschool-cpm.insertSnippet.jquery_function",
          "group": "javascript"
        },
        {
          "command": "powerschool-cpm.insertSnippet.tlist_sql",
          "group": "powerschool"
        },
        {
          "command": "powerschool-cpm.insertSnippet.if_block",
          "group": "powerschool"
        },
        {
          "command": "powerschool-cpm.insertSnippet.student_info",
          "group": "powerschool"
        },
        {
          "command": "powerschool-cpm.insertSnippet.breadcrumb",
          "group": "navigation"
        }
      ],
      "powerschool-cpm.templates": [
        {
          "command": "powerschool-cpm.createTemplate.admin",
          "group": "admin"
        },
        {
          "command": "powerschool-cpm.createTemplate.adminStudentPage",
          "group": "admin"
        },
        {
          "command": "powerschool-cpm.createTemplate.teacher",
          "group": "teacher"
        },
        {
          "command": "powerschool-cpm.createTemplate.teacherBackpack",
          "group": "teacher"
        },
        {
          "command": "powerschool-cpm.createTemplate.parentPortal",
          "group": "parent"
        }
      ]
    },
    "configuration": {
      "title": "PowerSchool CPM",
      "properties": {
        "powerschool-cpm.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync ps_webroot directory when workspace opens"
        },
        "powerschool-cpm.maxDepth": {
          "type": "number",
          "default": 5,
          "description": "Maximum folder depth to sync"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  }
}
